-@birds.each do |b|
	.small-4.large-4.columns.small-centered
		.updatebox.hidden{id: "update-#{b.id}"}
			%h2 Update this bird
			=form_for b, remote:true do |f|
				Name
				=f.text_field :name
				=f.select :color, options_for_select([['blue', "blue"],["red", "red"],["yellow", 'yellow']], b.color)
				=f.select :size, options_for_select([["Small", 'small'],["Medium", "medium"],["Large", "large"]] , b.size)
				=f.hidden_field :id 
				=f.submit class: "button tiny"
				.div{class:"button tiny close"} Close this window

















.small-4.large-4.columns.small-centered
	
	.newbox.hidden
		%h2 Add Bird
		=form_for @new_bird, url: birds_path, remote:true, method: :post do |b|
			name:
			=b.text_field :name
			color
			=b.select :color, options_for_select([['Blue', "blue"],["Red", "red"],["Yellow", 'yellow']])
			=b.select :size, options_for_select([["Small", 'small'],["Medium", "medium"],["Large", "large"]])
			=b.select :style_id, Style.all.collect { |i| [i.name, i.id]} , {include_blank: 'None'}
			
			=b.submit class: "button tiny"
			.div{class:"button tiny close"} Close this window





